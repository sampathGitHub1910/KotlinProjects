<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/vehicle_health_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Health Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/engine_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine Status: Good"
        android:textSize="18sp"
        android:layout_below="@id/vehicle_health_title"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/battery_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Status: Charging"
        android:textSize="18sp"
        android:layout_below="@id/engine_status"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tire_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tire Pressure: Normal"
        android:textSize="18sp"
        android:layout_below="@id/battery_status"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />

</RelativeLayout>
